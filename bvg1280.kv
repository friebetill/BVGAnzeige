#:kivy 1.0

<MyLabel@Label>:
    font_size: '50sp'
    text_size: self.size
    color: 1,1,1,1
    padding: [10, 10]
    canvas.before:
        Color:
            rgb: 0.07, 0.54, 0.66 # your color here
        Rectangle:
            pos: self.pos
            size: self.size

<BVG>:
    canvas:
        Rectangle:
            pos: 0, 0
            size: self.width, root.height * 0.09
        Rectangle:
            pos: 0, root.height-root.height * 0.09
            size: self.width, root.height * 0.28

    GridLayout:
        cols: 1
        rows: 9
        col_default_width: root.width * 0.2
        col_force_default: True
        row_default_height: root.height * 0.1
        row_force_default: True
        Label:
            text: 'Linie'
            padding: [10, 10]
            color: 0,0,0,1
            font_size: '50sp'
            text_size: self.size
        MyLabel:
            text: str(root.line[0])
        MyLabel:
            text: str(root.line[1])
        MyLabel:
            text: str(root.line[2])
        MyLabel:
            text: str(root.line[3])
        MyLabel:
            text: str(root.line[4])
        MyLabel:
            text: str(root.line[5])
        MyLabel:
            text: str(root.line[6])
        MyLabel:
            text: str(root.line[7])

    GridLayout:
        pos: (self.width * 0.2, 0)
        cols: 1
        rows: 9
        col_default_width: root.width * 0.65
        col_force_default: True
        row_default_height: root.height * 0.1
        row_force_default: True
        Label:
            text: 'Richtung'
            color: 0,0,0,1
            padding: [10, 10]
            font_size: '50sp'
            text_size: self.size
        MyLabel:
            text: str(root.destination[0])
        MyLabel:
            text: str(root.destination[1])
        MyLabel:
            text: str(root.destination[2])
        MyLabel:
            text: str(root.destination[3])
        MyLabel:
            text: str(root.destination[4])
        MyLabel:
            text: str(root.destination[5])
        MyLabel:
            text: str(root.destination[6])
        MyLabel:
            text: str(root.destination[7])

    GridLayout:
        pos: (self.width * 0.85, 0)
        cols: 1
        rows: 9
        col_default_width: root.width * 0.15
        col_force_default: True
        row_default_height: root.height * 0.1
        row_force_default: True
        Label:
            text: 'Zeit'
            color: 0,0,0,1
            padding: [10, 10]
            font_size: '50sp'
            text_size: self.size
            halign: 'right'
        MyLabel:
            text: str(root.remaining[0])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[1])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[2])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[3])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[4])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[5])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[6])
            halign: 'right'
        MyLabel:
            text: str(root.remaining[7])
            halign: 'right'

    GridLayout:
        pos: (0, 0)
        cols: 2
        rows: 1
        padding: [10, 10]

        Label:
            font_size: '50sp'
            text: 'Spandauer Damm 111'
            text_size: self.size
            color: 0,0,0,1
            size: root.width * 0.6, '80sp'
        Label:
            font_size: '50sp'
            text: str(root.time)
            text_size: self.size
            color: 0,0,0,1
            halign: 'right'
            size: root.width * 0.4, '80sp'
